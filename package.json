{
  "name": "hiveaid-bundle",
  "version": "0.2.0",
  "author": {
    "name": "UoM Esports Society",
    "email": "tech@uomesports.co.uk"
  },
  "scripts": {
    "autofix:browser": "eslint --fix --ext .js,.vue src/dashboard && eslint --fix --ext .js,.vue src/graphics",
    "autofix:extension": "eslint --fix --ext .ts src/extension",
    "static": "npm run static:extension && npm run static:browser",
    "static:browser": "eslint --ext .js,.vue src/dashboard && eslint --ext .js,.vue src/graphics",
    "static:extension": "eslint --ext .ts src/extension",
    "bundle": "trash graphics && trash dashboard && node script/bundle.js",
    "build": "npm run build:extension && npm run build:browser",
    "build:browser": "trash .cache && cross-env NODE_ENV=production npm run bundle",
    "build:extension": "trash extension && tsc -b tsconfig.json",
    "watch": "npm run bundle",
    "mock-donations": "node ./scripts/test_donation_server.js",
    "start": "node ../.."
  },
  "license": "AGPL-3.0",
  "private": true,
  "dependencies": {
    "clone": "^2.1.2",
    "cloneable-ts": "^1.0.15",
    "luxon": "^1.11.3",
    "milliseconds": "^1.0.3",
    "nanotimer": "^0.3.15",
    "parse-ms": "^2.0.0",
    "request-promise-native": "^1.0.7",
    "socket.io-client": "^2.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@chenfengyuan/vue-number-input": "^1.1.0",
    "@types/clone": "^0.1.30",
    "@types/luxon": "^1.11.1",
    "@types/node": "^11.9.4",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "@vue/component-compiler-utils": "^2.5.2",
    "cross-env": "^5.2.0",
    "dart-sass": "^1.17.1",
    "eslint": "^5.15.1",
    "eslint-plugin-vue": "^5.2.2",
    "gsap": "^2.1.0",
    "nodecg-vue": "^0.5.2",
    "parcel-bundler": "^1.11.0",
    "sass": "^1.17.1",
    "stylus": "^0.54.5",
    "trash-cli": "^1.4.0",
    "typescript": "^3.3.3",
    "vue": "^2.6.6",
    "vue-hot-reload-api": "^2.3.2",
    "vue-template-compiler": "^2.6.6",
    "vuetify": "^1.5.2"
  },
  "nodecg": {
    "compatibleRange": "^1.3.1",
    "graphics": [
      {
        "file": "starting.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "dashboardPanels": [
      {
        "name": "timer",
        "title": "Timer",
        "width": 2,
        "file": "timer-ctrl.html",
        "headerColor": "#525F78",
        "workspace": "1: Main"
      },
      {
        "name": "coming-up",
        "title": "Coming Up",
        "width": 2,
        "file": "coming-up.html",
        "headerColor": "#525F78",
        "workspace": "1: Main"
      },
      {
        "name": "names",
        "title": "Names",
        "width": 3,
        "file": "names.html",
        "headerColor": "#525F78",
        "workspace": "1: Main"
      },
      {
        "name": "omnibar-ticker",
        "title": "Omnibar Ticker",
        "width": 3,
        "file": "omnibar-ticker.html",
        "headerColor": "#525F78",
        "workspace": "1: Main"
      },
      {
        "name": "totals",
        "title": "Totals",
        "width": 3,
        "file": "totals-ctrl.html",
        "headerColor": "#525F78",
        "workspace": "1: Main"
      },
      {
        "name": "timer-dialog-to",
        "title": "Set Timer",
        "width": 4,
        "dialog": true,
        "dialogButtons": [
          {
            "name": "set",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ],
        "file": "timer-dialog-to.html"
      },
      {
        "name": "timer-dialog-for",
        "title": "Set Timer",
        "width": 4,
        "dialog": true,
        "dialogButtons": [
          {
            "name": "set",
            "type": "confirm"
          },
          {
            "name": "cancel",
            "type": "dismiss"
          }
        ],
        "file": "timer-dialog-for.html"
      }
    ]
  }
}
